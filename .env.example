# Environment Configuration for n8n on Render
# Copy this to your Render service environment variables

# Basic Configuration
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
NODE_ENV=production

# Database Configuration (PostgreSQL)
DB_TYPE=postgresdb
# These will be automatically set by Render from the database service
# DB_POSTGRESDB_HOST=<from_database_service>
# DB_POSTGRESDB_PORT=<from_database_service>
# DB_POSTGRESDB_DATABASE=<from_database_service>
# DB_POSTGRESDB_USER=<from_database_service>
# DB_POSTGRESDB_PASSWORD=<from_database_service>

# Authentication & Security
N8N_BASIC_AUTH_ACTIVE=true
# Generate secure credentials for these:
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password_here

# Encryption Key (Generate a strong random key)
N8N_ENCRYPTION_KEY=your_encryption_key_here_32_chars_minimum

# JWT Configuration
N8N_JWT_AUTH_HEADER=authorization
N8N_JWT_AUTH_HEADER_VALUE_PREFIX=Bearer

# URLs (will be set automatically by Render)
# WEBHOOK_URL=<your_render_service_url>
# N8N_EDITOR_BASE_URL=<your_render_service_url>

# Performance & Features
N8N_METRICS=true
N8N_LOG_LEVEL=info
N8N_SECURE_COOKIE=false
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular

# File System
N8N_USER_FOLDER=/home/n8n/.n8n

# Timezone
GENERIC_TIMEZONE=Asia/Bangkok
TZ=Asia/Bangkok